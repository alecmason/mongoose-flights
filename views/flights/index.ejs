<%- include('../partials/header') %>

<body>
    <h2>All Flights</h2>
    <table>
        <thead>
          <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>flight Number</th>
            <th>Departure Date</th>
          </tr>
        </thead>
        <tbody>
          <% flightDocuments.forEach(f => { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id %>">Detail</a></td>
              </tr>
          <% }) %>
        </tbody>
      </table>
      
      <%- include('../partials/footer') %>